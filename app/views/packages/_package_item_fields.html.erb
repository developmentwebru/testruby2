<%= content_tag :div, class: "nested-fields relative", data: { new_record: form.object.new_record? } do %>
  <div class="flex">
    <div class="w-2/3 pr-3">
      <%= form.input :description %>
    </div>
    <div class="w-24 pr-3">
      <%= form.input :price, input_html: { class: "no-spin" } %>
    </div>
    <div class="w-24 pr-3">
      <%= form.input :qty, input_html: { class: "no-spin" } %>
    </div>
    <%= link_to "#", data: { action: "click->nested-form#remove_association" }, class: "ml-1", style: "margin-top: 32px" do %>
      <%= octicon "x", width: 24 %>
    <% end %>

    <%= form.hidden_field :_destroy %>
  </div>
<% end %>
