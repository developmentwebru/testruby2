<%= content_for :title do %>
  <%= t(".title") %>
<% end %>

<h2 class="mb-3"><%= t(".title") %></h2>

<%= form_with url: admin_autocomplete_package_item_descriptions_path do |f| %>
  <div class="form-row">
    <div class="col-auto col-md-4">
      <%= f.text_field :value, class: "form-control", id: "js-autocomplete-package-item-description-input" %>
    </div>
    <div class="col-auto">
      <%= f.submit t(".add"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<ul class="mt-3 list-unstyled" id="js-autocomplete-package-item-description-list">
  <%= render partial: "description", collection: @descriptions %>
</ul>
