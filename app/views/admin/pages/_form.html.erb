<%= simple_form_for [:admin, @page], defaults: { wrapper: false } do |f| %>
  <div class="form-group">
    <%= f.input :slug %>
  </div>

  <div class="form-group">
    <%= f.input :title %>
  </div>
  
  <%= f.input :content, as: :hidden %>
  <trix-editor input="page_content"></trix-editor>

  <div class="mt-3">
    <%= f.button :submit, class: "mr-1" %>
    <%= link_to t("cancel"), admin_pages_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
