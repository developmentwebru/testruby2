<div class="card">
  <div class="card-header">
    <h6 class="mb-0"><%= t(".signed_up_users") %></h6>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= t(".signed_up_last_week") %>
      <div>
        <span class="badge badge-light">
          <%= @signedup_last_week %>
        </span>
        <span class="badge badge-light text-success">
          <i class="fas fa-passport"></i>
          <%= @signedup_last_week_profile %>
        </span>
      </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= t(".signed_up_last_month") %>
      <div>
        <span class="badge badge-light">
          <%= @signedup_last_month %>
        </span>
        <span class="badge badge-light text-success">
          <i class="fas fa-passport"></i>
          <%= @signedup_last_month_profile %>
        </span>
      </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= t(".signed_up_last_three_months") %>
      <div>
        <span class="badge badge-light">
          <%= @signedup_last_three_months %>
        </span>
        <span class="badge badge-light text-success">
          <i class="fas fa-passport"></i>
          <%= @signedup_last_three_months_profile %>
        </span>
      </div>
    </li>
  </ul>
</div>
