<%= content_for :title do %>
  <%= t(".title") %>
<% end %>

<div class="d-flex align-items-center mb-3">
  <h2 class="mr-2"><%= t(".title") %></h2>
  <h4>
    <span class="mr-1 badge badge-font-500 badge-pill badge-primary">
      <%= @users_total.count %>
    </span>
  </h4>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6">
        <%= form_tag admin_users_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag "search", params[:search], placeholder: t(".search_placeholder"), class: "form-control" %>
            <div class="input-group-append">
              <%= submit_tag t(".search"), class: "btn btn-outline-secondary" %>
            </div>
          </div>
        <% end %>
        <%= form_tag admin_users_path, method: :get do %>
          <div class="form-group form-check pl-0 mt-2 mb-0">
            <%= check_box_tag :show_admins, "yes", params[:show_admins] == "yes", onclick: "this.form.submit()" %>
            <label class="form-check-label" for="show_admins"><%= t(".filter_admins") %></label>
          </div>
        <% end %>
      </div>
    </div>

    <div class="my-4">
      <%= render @users %>
    </div>
    <%== pagy_nav(@pagy) %>
  </div>

  <div class="col-md-3 mt-4 mt-md-0">
    <%= render partial: "registrations" %>
  </div>
</div>
