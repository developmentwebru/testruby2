<%= content_for :title do %>
  <%= t(".change_your_password") %>
<% end %>

<h4 class="text-center mb-3"><%= t(".change_your_password") %></h4>
<div class="w-100 mx-auto" style="max-width: 350px;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t(".new_password"), class: "form-control" %>
      <small class="form-text text-muted"><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></small>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t(".confirm_new_password"), class: "form-control" %>
    </div>

    <%= f.submit t(".change_my_password"), class: "btn btn-primary btn-block" %>
  <% end %>
</div>
